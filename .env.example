# ── Telegram Bot ────────────────────────────────────────────────────────────────
BOT_TOKEN=your_bot_token_here

# Telegram IDs of admins (comma-separated)
ADMIN_IDS=123456789,987654321

# Telegram group/supergroup chat id for notifications (must be a forum/topic group)
ADMIN_GROUP_ID=-100xxxxxxxxxx

# Topic (thread) id inside the admin group where new-service requests are sent
ADMIN_TOPIC_ID=1

# ── Remnawave Panel ─────────────────────────────────────────────────────────────
REMNAWAVE_API_URL=https://dashboard.cloudvibe.ir
REMNAWAVE_API_TOKEN=your_remnawave_api_token_here

# ── Database ─────────────────────────────────────────────────────────────────────
# Format: postgresql+asyncpg://USER:PASSWORD@HOST:PORT/DBNAME
DATABASE_URL=postgresql+asyncpg://remnabot:remnabot_pass@localhost:5432/remnabot

# ── Redis (FSM storage) ──────────────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379/0

# ── Bot settings ────────────────────────────────────────────────────────────────
LOG_LEVEL=INFO
